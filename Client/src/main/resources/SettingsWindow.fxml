<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SettingsWindowController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <HBox prefHeight="24.0" prefWidth="560.0">
               <children>
                  <Label fx:id="languageText" prefHeight="20.0" prefWidth="96.0" text="%menu.language">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="languageComboBox" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox prefHeight="19.0" prefWidth="560.0">
               <children>
                  <Label fx:id="themeText" prefHeight="20.0" prefWidth="96.0" text="%menu.theme">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="themeComboBox" prefWidth="150.0" />
               </children>
            </HBox>
            <CheckBox fx:id="alertsCheckBox" mnemonicParsing="false" prefHeight="17.0" prefWidth="213.0" text="%settings.enableAlerts">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </CheckBox>
            <HBox alignment="CENTER" prefHeight="17.0" prefWidth="560.0" spacing="10.0">
               <children>
                  <Button fx:id="applyBtn" disable="true" mnemonicParsing="false" prefHeight="25.0" prefWidth="85.0" text="%alerts.apply" />
                  <Button fx:id="cancelBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="85.0" text="%alerts.cancel" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets top="100.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
